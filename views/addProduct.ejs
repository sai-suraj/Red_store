 <body >
<br><br><br>
 <div class="container" style="width:500px;background:light-grey; margin-left :500px"> 
 
 <h3 align="center"style="color:lightgrey" >Add Product</h3>  
                <br />  <br/>
  <form method="post" action = "/addProduct"  class="row g-3" onsubmit="return validateForm()" enctype="multipart/form-data">
  <div class="col-md-6">
    <label for="inputEmail4" class="form-label"  style="color:lightgrey">Product Name</label>
    <input type="text" class="form-control" id="productName" name="p_name" placeholder="Enter product name" >
  </div>
  <div class="col-md-6">
    <label for="inputPassword4" class="form-label" style="color:lightgrey"  > Product Price</label>
    <input type="number" class="form-control" id="productPrice"  name="p_price" placeholder="price($)" >
  </div>
  <div class="col-md-6">
    <label for="inputEmail4" class="form-label" style="color:lightgrey" >Product Categories</label>
    <select  class="form-control" name="p_category" id="category" style="padding: 10px; background:#edf2ff; border:none;"  placeholder=" Choose interger for electric,furniture or clothes category," required>
      <option selected style="display: none;" value="0">-- Select Category -- </option>
      
      <% category.forEach((item)=>{ %>
        <option value=<%= item.cat_id %>><%= item.category_name %></option>
      <% }) %>
   
  </select>
  </div>
  <div class="col-md-6">
  <label for="formFile" class="form-label" style="color:lightgrey"   >Add Image</label>
  <input class="form-control" type="file" name="image" placeholder="Attach product image " required>
</div>
  <div class="col-md-6">
    <label for="inputEmail4" class="form-label" style="color:lightgrey"  >Product Brand</label>
    <select name="p_brand" class="form-control" id="brand" style="padding: 10px; background:#edf2ff; border:none;" placeholder=" Choose interger for HP,Samsung or Asley category" required>
   
      <option selected style="display: none;" value="0">-- Select Brand -- </option>
      <% brands.forEach((item)=>{ %>
        <option value=<%= item.brand_id %>><%= item.brand_name %></option>
      <% }) %>
   
  </select>
  </div>

   
  <div class="col-12" align="center">
     <button class="btn btn-primary" id="addProduct"  style="background:lightgreen;color:black;margin-top:14px">Add Product</button>
    </div>
  
</form>

  <script>
    function validateForm(){
      var productName = $('#productName').val().trim();
      var productPrice = $('#productPrice').val();
      var category_id = $('#category').val();
      var brands_id = $('#brand').val();
      console.log(productName);
      if(productPrice == "") {
        alert('please enter the price');
        return false;
      }
      else if(productName =="") {
        alert('please enter product name');
        return false;
      }
      else if(category_id == "0") {
        alert('please select category');
        return false;
      }
      else if(brands_id == '0') {
        alert('please select brand name')
        return false;
      }
      return true;
    }
    // $('#addProduct').click((event)=>{
