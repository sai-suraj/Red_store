    $.ajax({
      url:'/api/clearCart',
      type:"POST",
      success:(()=>{
        alert('cart is cleared');
        // window.location.href = "/cart";
      })
    })
  })
  
  //
  $('.remove_item').click((event)=>{
      var button = $(event.target);
      var tr = button.closest('.item')
      console.log(tr.attr('id'));
      var product_id = tr.attr('id');
      $.ajax({
        url:'/api/removeCartItem',
        data:{
          product_id:product_id
        },
        type:"POST",
        success:(data)=>{
          console.log("Item has been removed");
          // window.location.href = "/cart" // if we want to reload the page
          tr.remove();
        }
      })
  })
</script>