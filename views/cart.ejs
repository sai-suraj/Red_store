<script >
  $('.increase').click((event)=>{
      var button = $(event.target);
      var tr = button.closest('.item')
      console.log(tr.attr('id'));
      var product_id = tr.attr('id');
      var num = $(`#qty_${product_id}`);
      var total_price = document.getElementById(`price${product_id}`);
      var cartPrice = document.getElementById('cartPrice');
      var val = num.val();
      var unitPrice = Number(total_price.innerHTML)/val;
      val++;
      total_price.innerHTML=Number(total_price.innerHTML)+unitPrice;
      cartPrice.innerHTML = Number(cartPrice.innerHTML)+unitPrice;
      num.val(val);
      $.ajax({
        url:`/api/changeQty/${product_id}`,
        type:"post",
        data:{
          val:val
        },
        success:(added)=>{
          console.log('item has been added ');
        }
      })
  })
  $('.decrease').click((event)=>{
      var button = $(event.target);
      var tr = button.closest('.item')
      console.log(tr.attr('id'));
      var product_id = tr.attr('id');
      var num = $(`#qty_${product_id}`);
      var total_price = document.getElementById(`price${product_id}`);
      var cartPrice = document.getElementById('cartPrice');
      var val = num.val();
      var unitPrice = Number(total_price.innerHTML)/val;
      if(val>1){
        val--;
        num.val(val);
        total_price.innerHTML=Number(total_price.innerHTML)-unitPrice;
        cartPrice.innerHTML = Number(cartPrice.innerHTML)-unitPrice;
        $.ajax({
          url:`/api/changeQty/${product_id}`,
          type:"post",
          data:{
            val:val
          },
          success:(added)=>{
            console.log('item has been added ');
          }
        })

      }
  })
  // clear cart
  var cart = $('#clearCart');
